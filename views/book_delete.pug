extends layout
block content
   h1 #{title}: #{book.title}
   if bookinstances.length > 0
      p #[strong Delete the following book instances before deleting this book]
      div 
         h4 Book Instances 
         dl
            each bookinstance in bookinstances 
               dt 
                  a(href=bookinstance.url) #{book.title}, #{bookinstance.id}
   else 
      p Do you really want to delete this book?
      form(method="POST" action="")
         div.form-group
            input#bookinstance.form-control(type="hidden", name="bookinstance",
            required="true", value=book._id)
         button.btn.btn-primary(type="submit") Delete